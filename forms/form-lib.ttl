<http://onto.fel.cvut.cz/ontologies/form-lib>
  a owl:Ontology ;
  owl:imports <http://onto.fel.cvut.cz/ontologies/form> ;
  owl:imports <http://spinrdf.org/spin> ;
.
fl:create-a
  a spin:Function ;
  spin:body [
      a sp:Select ;
      sp:resultVariables (
          [
            sp:varName "answer" ;
          ]
        ) ;
      sp:text """SELECT ?answer
WHERE {
     BIND (URI(CONCAT(str(?arg1),\"-\",\"a\")) AS ?answer) .
}
    
""" ;
      sp:where (
          [
            a sp:Bind ;
            sp:expression [
                a sp:uri ;
                sp:arg1 [
                    a sp:concat ;
                    sp:arg1 [
                        a sp:str ;
                        sp:arg1 spin:_arg1 ;
                      ] ;
                    sp:arg2 "-" ;
                    sp:arg3 "a" ;
                  ] ;
              ] ;
            sp:variable [
                sp:varName "answer" ;
              ] ;
          ]
        ) ;
    ] ;
  spin:constraint [
      a spl:Argument ;
      spl:predicate sp:arg1 ;
      spl:valueType rdfs:Resource ;
      rdfs:comment "Object that this answer describes." ;
    ] ;
  rdfs:comment "Generate answer based on object it originates from." ;
  rdfs:subClassOf spin:Functions ;
.
